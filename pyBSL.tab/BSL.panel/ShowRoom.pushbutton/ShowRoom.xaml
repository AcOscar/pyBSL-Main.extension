<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Room Highlighter" 
        Height="200" 
        Width="400"
        ShowInTaskbar="False" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        <!-- Input Room Number -->
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,10">
            <TextBlock Text="Room Number:" 
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"
                       Width="90"/>
            <TextBox x:Name="room_number_input" 
                     Width="260"
                     Height="25"
                     VerticalContentAlignment="Center"
                     />
        </StackPanel>
        
        <!-- Status -->
        <Border Grid.Row="1" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                Padding="10"
                Background="#F5F5F5">
            <TextBlock x:Name="status_text" 
                       Text="Enter a room number and click on ‘Highlight’."
                       TextWrapping="Wrap"
                       VerticalAlignment="Center"/>
        </Border>
        
        <!-- Button Container -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,15,0,0">
            
            <Button x:Name="highlight_button" 
                    Content="Highlight" 
                    Width="110" 
                    Height="30"
                    Margin="0,0,10,0"
                    Click="highlight_button_click"/>
            
            <Button x:Name="clear_button" 
                    Content="Clear Preview" 
                    Width="110" 
                    Height="30"
                    Margin="0,0,10,0"
                    Click="clear_button_click"/>
            
            <Button x:Name="close_button" 
                    Content="Close" 
                    Width="110" 
                    Height="30"
                    Click="close_button_click"/>
        </StackPanel>
        
        <!-- Info Text -->
        <TextBlock Grid.Row="3"
                   Text="The preview remains visible until you click ‘Clear’ or ‘Close’."
                   FontSize="10"
                   Foreground="Gray"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>